---
import Mainlayout from '../../layouts/main.astro'; 
import '../../styles/loader.css'
---

<Mainlayout title="Dashboard">
    <main>
        <section>
            <h1>Dashboard</h1>
            <p>Manage your 25565.club subdomains / account</p>
        </section>

        <section style="gap: 5px;">
            <h2>Subdomains (1 / 5)</h2>
            <p>Manage your subdomains</p>
            <div style="gap: 0px;">
                <p>- test.25565.club</p>
                <p>| A: none</p>
                <p>| AAAA: none</p>
                <p>| CNAME: none</p>
                <p>| SRV: none</p>
                <button onclick="window.location.href = '/dash/edit'">Edit</button>
            </div>
        </section>

        <section>
            <button onclick="window.location.href = '/dash/create'">Add subdomain</button>
        </section>

        <section style="gap: 5px;">
            <h2>Account: <span id="username"></span></h2>
            <p>Manage your account</p>
            <button id="logoutbtn">Log-out!</button>
            <button class="btn-danger">Delete account!!!</button>
        </section>
    </main>
    <script>
      import { zoomies } from 'ldrs'
      zoomies.register()
    </script>
    <script type="module">
        import { showLoader } from "https://cdn.jsdelivr.net/gh/joplayxyz/jalos@main/jalos.js";

        showLoader(1000, '<img src="/favicon/favicon-512x.png"><br><br><l-zoomies size="100" stroke="5" bg-opacity="0.1" speed="1.4" color="white" ></l-zoomies>')
    </script>
    <script type="module" src="/scripts/main.js"></script>
</Mainlayout>
