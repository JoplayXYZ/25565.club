---
import Mainlayout from '../../layouts/main.astro'; 
import '../../styles/loader.css';
---

<Mainlayout title="Edit subdomain">
    <main>
        <section>
            <h1>Create Subdomain</h1>
            <p>Create a new subdomain</p>
        </section>

        <section style="gap: 5px;">
            <h2>Records</h2>
            <select>
                <option>A     (ipv4)</option>
                <option>AAAA  (ipv6)</option>
                <option>CNAME</option>
                <option disabled>SRV (soon)</option>
            </select>
            <input id="record" type="text" placeholder="value">
        </section>

        <section style="gap: 5px;">
            <h2>Options</h2>
            <button>Save</button>
            <button class="btn-danger" onclick="window.location.href = '/dash'">Cancel</button>
        </section>
    </main>
    <script type="module">
        import { showLoader } from "https://cdn.jsdelivr.net/gh/joplayxyz/jalos@main/jalos.js";

        showLoader(1000, '<img src="/favicon/favicon-512x.png"><br><br><l-zoomies size="100" stroke="5" bg-opacity="0.1" speed="1.4" color="white" ></l-zoomies>')
    </script>
	<script type="module" src="/scripts/main.js"></script>
</Mainlayout>
